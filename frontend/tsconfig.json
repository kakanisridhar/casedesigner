{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "outDir": "build",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "types": ["webpack-env"]
  },
  "include": ["src", "types/index.d.ts", "./typings.d.ts"],
  "exclude": ["node_modules", "build", "compiled", "webpack"]
}
